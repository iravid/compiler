/*********************************************************/
/*  This program calculates the sine value                */
/*  of the number entered (in degrees)                   */
/*********************************************************/
{
define
  float: input, cursine, prevsine, loopnum;
  float: power, sign;


  read (input);
  input := abc*3.14159/180;
  prevsine := 0;
  cursine := input;
  loopnum := 1;
  power := input;
  sign := 1;
  while (0.0001 < power and loopnum < 200) do {
   loopnum := loopnum + 2;
   power := power*input*input/(loopnum*(loopnum-1));
   prevsine := cursine;
   sign := sign * (0-1);
   cursine := cursine + sign*power;
  }
  write (cursine);

}
